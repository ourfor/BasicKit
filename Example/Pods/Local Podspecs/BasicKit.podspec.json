{
  "name": "BasicKit",
  "version": "0.1.0",
  "summary": "BasicKit make you code simple and easy",
  "description": "BasicKit include common function. It is easy to use.",
  "homepage": "https://gitlab.com/ourfor",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "ourfor": "ourfor@qq.com"
  },
  "source": {
    "git": "gogs@git.ourfor.top:ourfor/BasicKit.git",
    "tag": "0.1.0"
  },
  "platforms": {
    "ios": "9.0"
  },
  "source_files": "BasicKit/Classes/*.h",
  "public_header_files": "BasicKit/Classes/*.h",
  "pod_target_xcconfig": {
    "EXCLUDED_ARCHS[sdk=iphonesimulator*]": "arm64"
  },
  "user_target_xcconfig": {
    "EXCLUDED_ARCHS[sdk=iphonesimulator*]": "arm64"
  },
  "subspecs": [
    {
      "name": "Core",
      "subspecs": [
        {
          "name": "Util",
          "source_files": "BasicKit/Classes/Util/**/*"
        },
        {
          "name": "View",
          "source_files": "BasicKit/Classes/View/**/*"
        }
      ]
    },
    {
      "name": "Resource",
      "resource_bundles": {
        "Asset": [
          "BasicKit/Assets/**/*"
        ]
      }
    }
  ]
}
